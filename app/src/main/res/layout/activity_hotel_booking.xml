<!-- hotel_booking_page.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivHotelImage"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:src="@drawable/banner_hotel" /> <!-- Reference to the image resource, in this case hotel_image.png -->

    <ImageView
        android:id="@+id/hotel_1"
        android:layout_width="398dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="257dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="242dp"
        android:src="@drawable/glenmarie" />

    <TextView
        android:id="@+id/tvHotelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivHotelImage"
        android:layout_marginStart="16dp"
        android:layout_marginTop="168dp"
        android:text="Glenmarie Hotel and Golf Resort"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvHotelLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHotelName"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="4-star hotel 1, Jalan Usahawan U1/8, Glenmarie Golf And Country Club, 40250 Shah Alam, Selangorâ€¢03-7802 5200"
        android:textSize="18sp" />

    <!-- Other views for hotel details, booking form, etc. -->

</RelativeLayout>
